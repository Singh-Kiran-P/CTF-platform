{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "paths": {
            "@uploads/*": [
                "../public/uploads/*"
            ],
            // "*": [
            //     "node_modules/*"
            // ]
        }
    },
    "include": [
        "src/**/*",
        "index.ts"
    ]
}
