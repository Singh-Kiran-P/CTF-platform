{
    "name": "server",
    "version": "1.0.0",
    "scripts": {
        "build": "tsc -b",
        "client": "npm run client --prefix ../client",
        "server": " npm run build && concurrently --kill-others  \"tsc --watch\" \"nodemon --exec ts-node -r tsconfig-paths/register dist/server/src\"",
        "dev": "concurrently --kill-others  \"npm run client\" \"npm run server\""
    },
    "dependencies": {
        "bunyan": "^1.8.15",
        "concurrently": "^6.0.0",
        "dotenv": "^8.2.0",
        "ejs": "^3.1.6",
        "express": "^4.17.1",
        "livereload": "^0.9.3",
        "morgan": "^1.10.0",
        "pg": "^8.5.1",
        "reflect-metadata": "^0.1.13",
        "socket.io": "^4.0.1",
        "tslib": "^2.2.0",
        "typeorm": "^0.2.32"
    },
    "devDependencies": {
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.11",
        "@types/fs-extra": "^9.0.9",
        "@types/node": "^14.14.37",
        "@types/shelljs": "^0.8.8",
        "fs-extra": "^9.1.0",
        "nodemon": "^2.0.7",
        "npm-run-all": "^4.1.5",
        "rimraf": "^2.7.1",
        "shelljs": "^0.8.4",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.3",
        "tsconfig-paths": "^3.9.0"
    }
}
